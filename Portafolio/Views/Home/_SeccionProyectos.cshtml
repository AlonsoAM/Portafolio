@model IEnumerable<Proyecto>

@if (Model is not null)
{
    <div class="text-center" style="padding-top: 6rem;">
        <h1>
            Mis trabajos recientes
        </h1>
        <p>
            Aquí puedes ver alguno de mis trabajos más recentes.
        </p>
    </div>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var proyecto in Model)
            {
                <div class="col">
                    <div class="card">
                        <div class="card h-100">
                            <img src=@proyecto.ImagenURL class="card-img-top" alt="imagen proyecto" />
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@proyecto.Titulo</h5>
                            <p class="card-text">@proyecto.Decripcion</p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href=@proyecto.Link target="_blank" rel="noreferrer noopener">Visitar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}